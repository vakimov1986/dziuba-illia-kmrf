<Window x:Class="CurConvApp.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Історія конвертацій" Height="282" Width="470"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TextBlock Text="Історія конвертацій" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
        <ListView Name="HistoryList" Margin="0,40,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата/Час" Width="140" 
                                    DisplayMemberBinding="{Binding ConversionDateTime, StringFormat=d MMM yyyy HH:mm}"/>
                    <GridViewColumn Header="З" Width="60" DisplayMemberBinding="{Binding FromCurrency}"/>
                    <GridViewColumn Header="У" Width="60" DisplayMemberBinding="{Binding ToCurrency}"/>
                    <GridViewColumn Header="Сума" Width="80" DisplayMemberBinding="{Binding AmountFrom}"/>
                    <GridViewColumn Header="Отримано" Width="100" DisplayMemberBinding="{Binding AmountTo}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
