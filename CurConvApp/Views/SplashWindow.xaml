<Window x:Class="CurConvApp.Views.SplashWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="400">
    <Border CornerRadius="16" Padding="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                <GradientStop Color="#FFB0C4DE" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="ВСП Київський фаховий коледж морського і річкового флоту та транспортних технологій НТУ"
                       FontSize="12" TextWrapping="Wrap" Margin="10" TextAlignment="Center"/>
            <Image Source="/Views/splash.jpg" Width="350" Height="193" Margin="0,0,0,10"/>
            <TextBlock Text="Currency Converter App" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="created by Illia Dziuba in cooperation with Vladyslav Akimov"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Завантаження..." Margin="0,0,0,8" Foreground="Gray" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Height="8" Margin="0,8,0,0"/>
        </StackPanel>
    </Border>
</Window>
